{% extends "layout.njk" %}

{% block content %}
<div class="card">
 <section 
   class="avatar" 
   style="background: url({{ instrutores.avatar_url }}) no-repeat center center / cover ">
 </section>

<section class="details">

<h3>Detalhes</h3>
<div class="item">

<div>Instrutor</div>
<div>{{ instrutores.name }}</div>
</div>

<div class="item">
<div>Sexo</div>
<div>{{ "Masculino" if instrutores.gender == "M" else "Feminino" }}</div>
</div>


<div class="item">
<div> Especialidade </div>
<div>
<span> {{ instrutores.services }} </span>

  </div>
</div>

<div class="item">
<div>Desde</div>
<div>{{ instrutores.created_at }}</div>
</div>

<a href="../instrutores/{{ instrutores.id }}/edit" class="button">Editar</a>

</section>
</div>


{% endblock content %}
