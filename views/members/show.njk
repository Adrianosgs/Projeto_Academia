{% extends "layout.njk" %}


{% block content %}
<div class="card">
<section 
class="avatar" 
style="background: url({{members.avatar_url}}) no-repeat center center / cover "></section>

<section class="details">

<h3> Detalhes </h3>
<div class="item">

<div> Menbro </div>
<div>{{members.name}}</div>
</div>

<div class="item">
<div> Email </div>
<div>{{members.email}}</div>
</div>

<div class="item">
<div> Sexo </div>
<div>{{ "Masculino" if members.gender == "M" else "Feminino" }}</div>
</div>

<div class="item">
<div> Peso (Kg)</div>
<div>
<div>{{members.weight}}</div>

</div>

<div class="item">
<div> Altura (cm) </div>
<div>
<div>{{members.height}}</div>

  </div>
</div>

<div class="item">
<div> Tipo Sanguineo </div>
<div>{{members.blood}}</div>
</div>

<a href="/members/{{members.id}}/edit" class="button">Editar</a>

</section>
</div>




{% endblock content %}
